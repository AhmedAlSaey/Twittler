{
	"name": "twittler",
	"version": "1.0.0",
	"description": "A twitter clone with simple APIs for posts and comments",
	"main": "src/index.ts",
	"scripts": {
		"start": "ts-node -r dotenv/config ./src/index.ts",
		"dev": "nodemon -r dotenv/config ./src/index.ts",
		"test": "jest",
		"start-db": "docker run --name postgresql-container -p 5432:5432 -e POSTGRES_PASSWORD=123456 -d postgres",
		"prepare": "husky install"
	},
	"dependencies": {
		"@types/express": "4.17.13",
		"@types/node": "15.6.2",
		"dotenv": "9.0.1",
		"express": "4.17.1",
		"pg": "8.6.0",
		"pg-format": "1.0.4"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/pg": "^8.6.4",
		"@types/pg-format": "^1.0.2",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"csvtojson": "^2.0.10",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-prettier": "4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"nodemon": "2.0.15",
		"prettier": "2.5.1",
		"ts-jest": "^27.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.5.5"
	},
	"author": "Ahmed AlSaey",
	"license": "ISC",
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix"
		],
		"*.{ts,tsx,json,md,graphql}": [
			"prettier --write"
		]
	}
}
